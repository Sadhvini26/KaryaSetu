<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs</title>
    <link rel="stylesheet" href="/job.css">
    <style>
        /* Modal Overlay */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        .modal-overlay.open {
            display: block;
        }

        /* Modal Content */
        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #fff;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1001;
            width: 300px;
            border-radius: 8px;
        }

        .modal.open {
            display: block;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .modal-header button {
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
        }

        .modal-body {
            text-align: center;
        }

        .modal-body input {
            width: 90%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .modal-body button {
            padding: 10px 20px;
            background-color: #753BBD;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .modal-body button:hover {
            background-color: #5a2a8a;
        }
        .hireNowBtn {
            background: linear-gradient(90deg, #8b75ef, #b580ec);
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.hireNowBtn:hover {
    background: linear-gradient(90deg, #6548e4, #b580ec);
    transform: scale(1.05);
}

    </style>
</head>
<body>
    <header>
        <div class="logo">
          <img src="/logo.png" alt="KaryaSetu Logo">
          
        </div>
        <h3 style="color: rgb(83, 83, 83);">WELCOME <%= USERNAME.toUpperCase() %></h3>
        <nav>
           
          <ul>
           
           
            <button class="login-btn" id="back">BACK</button>
          </ul>
        </nav>
    </header>
    <h1 style="text-align: center;">Available Jobs</h1>
    <section class="page-contain">
        <% if(jobs.length >0) {%>
        <% jobs.forEach(job => { %>
        <div class="data-card">
          <h3><%= job.title %></h3>
          
          <p><%= job.description %></p>
          <span class="link-text">
            <% if (!job.hired) { %>
            <button class="hireNowBtn" data-job-id="<%= job._id %>">Hire Now</button>
            <% } else { %>
            <span class="hired-text">Hired</span>
            <% } %>
          </span>
        </div>
        <% }) %>
        <% }  else {%>
            <h1>No Jobs available</h1>
        <% } %>
    </section>

    <!-- Modal -->
    <div class="modal-overlay"></div>
    <div class="modal">
        <div class="modal-header">
            <h3>Confirm Hiring</h3>
            <button class="closeModalBtn">X</button>
        </div>
        <div class="modal-body">
            <label for="location">Enter your location:</label>
            <input type="text" id="location" name="location" placeholder="Your Location" required>
            <button id="submitBtn">Submit</button>
        </div>
    </div>

    <script>
        document.getElementById('back').addEventListener('click', ()=>{
            window.location.href='/'
        })
        document.addEventListener('DOMContentLoaded', () => {
            const hireNowBtns = document.querySelectorAll('.hireNowBtn');
            const modalOverlay = document.querySelector('.modal-overlay');
            const modal = document.querySelector('.modal');
            const closeModalBtns = document.querySelectorAll('.closeModalBtn');
            const submitBtn = document.getElementById('submitBtn');
            let currentJobId = null;

            // Open modal
            hireNowBtns.forEach(button => {
                button.addEventListener('click', (event) => {
                    currentJobId = event.target.dataset.jobId; // Capture job ID
                    modal.classList.add('open');
                    modalOverlay.classList.add('open');
                });
            });

            // Close modal
            const closeModal = () => {
                modal.classList.remove('open');
                modalOverlay.classList.remove('open');
                currentJobId = null; // Reset job ID
            };

            closeModalBtns.forEach(button => button.addEventListener('click', closeModal));
            modalOverlay.addEventListener('click', closeModal);

            // Handle form submission
            submitBtn.addEventListener('click', () => {
                const location = document.getElementById('location').value;

                if (location.trim()) {
                    fetch(`/jobs/hire/${currentJobId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ location })
                    })
                    .then(response => response.json())
                    .then(data => {
                        alert('Job successfully hired!');
                        closeModal(); // Close the modal after submission
                        location.reload(); // Refresh to update job status
                    })
                    .catch(error => {
                        alert('Error hiring job');
                    });
                } else {
                    alert('Please enter your location!');
                }
            });
        });
    </script>
</body>
</html>
